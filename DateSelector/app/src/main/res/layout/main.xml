<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainGroupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yaowen.classUtil.DatePicker
        android:id="@+id/myDatePicker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:dateFormat="yyyy-MM-dd HH:mm:ss"
        app:dialogType="selectDialog"

        app:value="2015-12-26 15:22:22" />

    <com.yaowen.classUtil.DatePicker
        android:id="@+id/myDatePicker2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:dateFormat="yyyy-MM-dd HH:mm:ss"
        app:dialogType="canEditDialog"
        app:value="2015-12-26 15:22:22" />

    <com.yaowen.classUtil.CheckboxGroup
        android:id="@+id/checkbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:checkboxGroupTitle="你喜欢下面那个数字"
        app:columnCount="4">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />

    </com.yaowen.classUtil.CheckboxGroup>

    <com.yaowen.classUtil.RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:checkboxGroupTitle="你的性别是？">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男" />
    </com.yaowen.classUtil.RadioGroup>
</LinearLayout>
